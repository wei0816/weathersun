@model Weathersun8889.管理員

@{
    ViewBag.Title = "管理員登入";
}

<h2>管理員登入</h2>
<form action="@Url.Action("Login")" method="post">
    <div class="form-group">
        <p><label for="exampleInputEmail1">帳號</label></p>
        <p><input type="text" class="form-control" id="管理員帳號" name="loginName" placeholder="輸入帳號" value="" ,required="required"></p>
    </div>
    <div class="form-group">
        <p><label for="exampleInputPassword1">密碼</label></p>
        <p><input type="password" class="form-control" id="管理員密碼" name="loginPwd" placeholder="輸入密碼" value="" ,required="required"></p>
    </div>
    <div>
        <p><button type="submit" class="btn btn-primary">登入</button></p>
    </div>
    <div>
        <span style="color:red">@ViewBag.Message</span>
    </div>
    <p>@Html.ActionLink("註冊", "Create")</p>
</form>

