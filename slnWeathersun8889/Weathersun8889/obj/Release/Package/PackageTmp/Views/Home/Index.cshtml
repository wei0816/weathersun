@model IEnumerable<Weathersun8889.會員>

@{
    ViewBag.Title = "會員登入";
}

<h2>會員登入</h2>

<form action="@Url.Action("Login")" method="post">
    <div class="form-group">
        <p><label for="exampleInputEmail1">帳號</label></p>
        <p><input type="text" class="form-control" id="loginName" name="loginName" placeholder="輸入帳號" value="" ,required="required"></p>
    </div>
    <div class="form-group">
        <p><label for="exampleInputPassword1">密碼</label></p>
        <p><input type="password" class="form-control" id="loginPwd" name="loginPwd" placeholder="輸入密碼" value="" ,required="required"></p>
    </div>
    <div>
        <p><button type="submit" class="btn btn-primary">登入</button></p>
    </div>
    <div>
        <span style="color:red">@ViewBag.Message</span>
    </div>
    <p>@Html.ActionLink("註冊", "Create")</p>
</form>
