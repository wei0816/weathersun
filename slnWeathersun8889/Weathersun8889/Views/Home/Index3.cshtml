@model IEnumerable<Weathersun8889.管理員>

@{
    ViewBag.Title = "管理員登入";
}

<div class="col-md-12">
    <h2>&nbsp;</h2>
</div>
<div class="content">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <h2>管理員登入</h2>
                    <form action="@Url.Action("Index3")" method="post">
                        <div class="form-group">
                            <p><label for="exampleInputEmail1">帳號</label></p>
                            <p><input type="text" class="form-control" id="管理員帳號" name="loginName" placeholder="輸入帳號" value="" ,required="required"></p>
