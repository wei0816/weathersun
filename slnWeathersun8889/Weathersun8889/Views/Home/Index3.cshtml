                        <div class="form-group">
                            <p><label for="exampleInputPassword1">密碼</label></p>
                            <p><input type="password" class="form-control" id="管理員密碼" name="loginPwd" placeholder="輸入密碼" value="" ,required="required"></p>
                        </div>
                        <div>
                            <p><button type="submit" class="btn btn-primary btn - round">登入</button></p>
                        </div>
                        <div>
                            <span style="color:red">@ViewBag.Message</span>
                        </div>
                        <p>&nbsp;</p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="wrapper ">
    <div class="sidebar" data-color="white" data-active-color="danger">
        <div class="logo">
            <a class="simple-text logo-mini">
                <div class="logo-image-small">
                    <img src="~/img/logo-sun.png">
                </div>
                <!-- <p>CT</p> -->
            </a>
            <a class="simple-text logo-normal">
                <strong>
                    晴穿搭
                    <!-- <div class="logo-image-big">
                           <img src="~/img/logo-big.png">
            </div> -->
                </strong>
            </a>
        </div>

        <div class="sidebar-wrapper">
            <ul class="nav navbar-nav">
                <li>

                    <i class="glyphicon glyphicon-user"></i>
                    <h5>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;請先登入😆</h5>
                    <h5>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;才能使用這邊功能喔</h5>
                </li>


            </ul>
        </div>
    </div>
</div>



