            <div class="font">
                <h1>歡迎來到天氣調查局🌤</h1>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="weather">
                            <h3 id="CName"></h3>
                            <div class="weatherNow"></div>
                            <div class="weatherWeek"></div>
                        </div>
                    </div>
                    <span id="weatherNowTemp">1000</span>

                    <div id="slider">
                        <input type="radio" name="slider" id="slide1" checked>
                        <input type="radio" name="slider" id="slide2">
                        <input type="radio" name="slider" id="slide3">
                        <div id="slides">
                            <div id="overflow">
                                <div class="inner">
                                    <div class="slide slide_1">
                                        <div class="slide-content">
                                            <img id="imageid" />
                                        </div>
                                    </div>

                                    <div class="slide slide_1">
                                        <div class="slide-content">
                                            <img id="imagid" />
                                        </div>
                                    </div>

                                    <div class="slide slide_2">
                                        <div class="slide-content">
                                            <img id="igid" />
                                        </div>
                                    </div>
                                    <div class="slide slide_3">
                                        <div class="slide-content">

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div id="controls">
                            <label for="slide1"></label>
                            <label for="slide2"></label>
                            <label for="slide3"></label>

                        </div>
                        <div id="bullets">
                            <label for="slide1"></label>
                            <label for="slide2"></label>
                            <label for="slide3"></label>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
                $('.collapse.in').toggleClass('in');
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });
        });
    </script>
    <script type="text/javascript" src="~/Scripts/cityData.js"></script>
    <script type="text/javascript" src="~/Scripts/WeatherScript.js"></script>
    <script>
        $('#weatherNowTemp').on('DOMSubtreeModified', function () {
            var averagetemp = document.getElementById("weatherNowTemp").innerText;
            alert('現在溫度:' + averagetemp);
            var img = document.getElementById("imageid");
            //averagetemp = 20;
            if (averagetemp >= 30) {
                img.src = "../img/boy/b30degrees_1.PNG";
                img.width = '180';
            } else if (averagetemp >= 25 && averagetemp < 30) {
                img.src = "../img/boy/b25degrees_1.PNG";
                img.width = '180';
            } else if (averagetemp >= 20 && averagetemp < 25) {
                img.src = "../img/boy/b20degrees_1.PNG";
                img.width = '180';
            } else if (averagetemp >= 15 && averagetemp < 20) {
                img.src = "../img/boy/b15degrees_1.PNG";
                img.width = '180';
            } else if (averagetemp < 15) {
                img.src = "../img/boy/b10degrees_1.PNG";
                img.width = '180';
            }
        })

    </script>
