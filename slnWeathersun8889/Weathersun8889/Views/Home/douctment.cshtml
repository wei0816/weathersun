@model IEnumerable<Weathersun8889.貼文>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
<script>
    $(function () {
        $('#myTable').DataTable();
    });
</script>
@{ ViewBag.Title = "貼文管理"; }

<div class="col-md-12">
    <h2>&nbsp;</h2>
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <table id="myTable" class="display">
                        <thead>
                            <tr style="background-color:#f0f8ff;">
                                @Html.ActionLink("新增貼文 ", "postcreate", new { @class = "btn btn-default" })
                                <th>
                                    @Html.DisplayNameFor(model => model.貼文編號)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.會員帳號)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.貼文照片)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.貼文文字)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.編輯日期)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.商品標籤)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.貼文編號)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.會員帳號)
                                    </td>
                                    <td>
                                        <img src="@item.貼文照片" width="50" height="50" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.貼文文字)
                                    </td>
                                    <td>
                                        @DateTime.Parse(item.編輯日期.ToString()).ToShortDateString()
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.商品標籤)
                                    </td>
                                    <td>
                                        @Html.ActionLink("📃", "Edit", new { account = item.貼文編號 })

                                        @Html.ActionLink("❌", "Delete", new { account = item.貼文編號 },
                                        new { onclick = "return confirm('確定刪除嗎?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
