@model Weathersun8889.商品



<h2>商品</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.商品標籤, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.商品標籤, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.商品標籤, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.商品貨號, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.商品貨號, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.商品貨號, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.商品名稱, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.商品名稱, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.商品名稱, "", new { @class = "text-danger" })
        </div>
    </div>
    <p>
        <body>
            <form method="post" action="@Url.Action("Productpics")" enctype="multipart/form-data">
                <div class="form-group">
                    @Html.LabelFor(model => model.商品圖片, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.商品圖片, new { htmlAttributes = new { @class = "form-control", type = "file", name = "postpics", id = "postpics", required = "required" } })
                        @Html.ValidationMessageFor(model => model.商品圖片, "", new { @class = "text-danger" })
                    </div>
                </div>
            </form>
        </body>
    </p>
    <div class="form-group">
        @Html.LabelFor(model => model.商品售價, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.商品售價, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.商品售價, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.廠商名稱, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.廠商名稱, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.廠商名稱, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.商品類別, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.商品類別, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.商品類別, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.商品連結, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.商品連結, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.商品連結, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="新增" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("返回商品頁面", "products")
</div>
