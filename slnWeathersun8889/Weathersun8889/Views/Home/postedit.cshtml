@model Weathersun8889.貼文

@{
    ViewBag.Title = "貼文修改";
}

<h2>貼文修改</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <meta name="viewport" content="width=device-width" />
    </head>

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.貼文編號)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.會員帳號)

        <div class="form-group">
            @Html.LabelFor(model => model.貼文照片, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.貼文照片, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.貼文照片, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.貼文文字, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.貼文文字, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.貼文文字, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.編輯日期, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.編輯日期, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.編輯日期, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.商品標籤, "商品標籤", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.商品標籤, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.商品標籤, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="修改" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Douctment")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
