
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title -晴穿搭</title>
    <link rel="sun-touch-icon" sizes="76x76" href="~/img/sun-icon.png">
    <link rel="icon" type="image/png" href="~/img/weathersun.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>晴穿搭</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/paper-dashboard.css?v=2.0.1" rel="stylesheet" />
    <link rel="stylesheet" href="~/background.css">
    <link rel="stylesheet" href="https://s1.pstatp.com/cdn/expire-1-y/tailwindcss/2.0.3/tailwind.min.css">
    <link rel="stylesheet" href="https://s3.pstatp.com/cdn/expire-1-y/MaterialDesign-Webfont/5.9.55/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
@{ ViewBag.Title = "密碼重設"; }
<body class="dwo h-screen overflow-hidden flex items-center justify-center">
    <nav class="navbar navbar-expand-lg text-uppercase fixed-top">
        <div class="container">
            <a href="WebHomepage">
                <img width="80" src="~/img/logo-sun.PNG">
            </a>
        </div>
    </nav>
    <form action="@Url.Action("ForgetPassword")" method="post">
        <div class="bg">
            <img src="~/img/bg4.png">
        </div>
        <div class="min-h-screen flex items-center justify-center px-5 py-5">
            <div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden">
                <div class="md:flex w-full">
                    <div class="w-full py-10 px-5 md:px-10">
                        <div class="text-center mb-10">
                            <h1 class="animate__animated animate__tada font-bold text-3xl text-gray-900">密碼重設</h1>
                        </div>
                        <div class="flex -mx-3">
                            <div class="w-full px-5 mb-12">
                                <label for="exampleInputEmail1" class="text-xs font-semibold px-1">舊密碼</label>
                                <div class="flex">
                                    <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                                        <i class="mdi mdi-lock-outline text-gray-400 text-lg"></i>
                                    </div>
                                    <input type="password" id="loginName" name="loginName" class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-400" placeholder="清輸入舊密碼" value="" required="required">
                                </div>
                            </div>
                        </div>
                        <div class="flex -mx-3">
                            <div class="w-full px-5 mb-12">
                                <label for="exampleInputPassword1" class="text-xs font-semibold px-1">新密碼</label>
                                <div class="flex">
                                    <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                                        <i class="mdi mdi-lock-outline text-gray-400 text-lg"></i>
                                    </div>
                                    <input type="password" id="loginPwd" name="loginPwd" class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-400" placeholder="請輸入新密碼" value="" required="required">
                                </div>
                            </div>
                        </div>
                        <div class="flex -mx-3">
                            <div class="w-full px-5 mb-12">
                                <label for="exampleInputPassword1" class="text-xs font-semibold px-1">密碼確認</label>
                                <div class="flex">
                                    <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                                        <i class="mdi mdi-lock-outline text-gray-400 text-lg"></i>
                                    </div>
                                    <input type="password" id="loginPwd" name="loginPwd" class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-400" placeholder="確認密碼" value="" required="required">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="block w-full max-w-xs mx-auto bg-yellow-400 hover:bg-indigo-300 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font-semibold">
                            確認
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>


