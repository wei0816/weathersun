</head>
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.會員帳號)

    <div class="form-group">
        @Html.LabelFor(model => model.性別, htmlAttributes: new { @class = "control-label col-md-2" })
